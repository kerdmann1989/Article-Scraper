<div class="container">
	<button class="scrape waves-effect waves-light btn-small">Scrape</button>
	<div class="row">
		<div class="col s12">
			{{#if articles}}
			{{#each articles}}
			<div class="row" id="notes"></div>

			<div class="card blue-grey darken-1 articleContainer">
				<div class="articleTitle">
					<a href="https://www.ksl.com{{this.link}}" target="_blank" class="text-white">
						<h5 class="articleTitle" data=id={{this._id}}>{{this.title}}</h5>
					</a>
				</div>
				<div class="row">
					<div class="col s10">
		<div class="row" id="notes"></div>

						<p class="card-content white-text">
							{{this.summary}}
						</p>

					</div>
					<div class="col s2">

						{{!-- <button type="button" data-id={{this._id}} class="btn-floating btn-large waves-effect waves-light save-btn">Save
							Article</button> --}}
						<button data-id={{this._id}} class="btn-floating btn-large waves-effect waves-light note-btn">Note
						</button>


					</div>
				</div>

			</div>

			{{/each}}
			{{else}}
			<div class="card text-white bg-warning w-90 p-1">
				<div class="card-body text-center">
					There are no new any new articles
				</div>
			</div>
			{{/if}}
		</div>

	</div>
</div>