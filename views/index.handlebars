<div class="container">
	<div class="row center-align">
		<div class="col s12">
			<h1 class="center-align title">Article Scraper</h1>
			<button class="scrape waves-effect waves-light btn-large grey">Scrape New Articles</button>

		</div>
	</div>

	<div class="row">
		<div class="col s12">
			{{#if articles}}
			{{#each articles}}
			<ul class="collapsible">
				<li class="active">
					<div class="collapsible-header">
						<h5 class="titleOfArticle" data=id={{this._id}}>{{this.title}}</h5>
					</div>
					<div class="collapsible-body">
						<span>{{this.summary}}</span><br><a class="button" href="https://www.ksl.com{{this.link}} target=" _blank" class="text-white" id="read"">Read More</a>
			</div>					
		    <div class="
						 collapsible-body">
							<span>{{this.link}}</span>
					</div>
				</li>
				<li>
					<div class=" collapsible-header"><i class="material-icons">add</i>Notes
					</div>
					<div class="collapsible-body">
						<button data-id={{this._id}} class="btn-floating btn-large waves-effect waves-light note-btn">Add
						</button>
						<button data-id={{this._id}} class="btn-floating btn-large waves-effect waves-light" id="view">View
						</button>
					</div>
					<div class="collapsible-body">
						<div class="{{this._id}}notes"></div>
						<div class="{{this._id}}articleNotes"></div>
				</li>
			</ul>
			{{/each}}
			{{else}}
			<div class="card text-white bg-warning w-90 p-1">
				<div class="card-body text-center">
				</div>
			</div>
			{{/if}}
		</div>
	</div>
</div>